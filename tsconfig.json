{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src/",
  },
  "include": ["./src/**/*.ts", "./test/**/*"],
  "exclude": [
    "node_modules"
  ]
}